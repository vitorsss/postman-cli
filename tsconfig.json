
{
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "*.config.js",
    "gen.ts",
  ],
  "include": [
    "./src",
    "./generated",
    "./index.ts",
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2018",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@gen/*": ["./generated/*"],
      "@cmd/*": ["./src/cmd/*"],
      "@cmd": ["./src/cmd/index"],
      "@helpers/*": ["./src/helpers/*"],
      "@helpers": ["./src/helpers/index"],
      "@integrations/*": ["./src/integrations/*"],
    }
  },
  "tsc-alias": {
    "verbose": true,
  },
}
